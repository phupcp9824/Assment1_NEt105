@model IEnumerable<WebApi.Models.User>


<h3 class="text-center">List User</h3>
<div class="row mt-2">
    <div class="col-10">
        <form action="/Admin/FindByUser" method="get" class="form-inline my-2 my-lg-0 d-flex">
            <input class="form-control mr-sm-2" type="search" name="fullname" placeholder="Search by name..." aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="col-2">
        <form asp-action="IndexUser" method="get" class="form-inline my-2 my-lg-0">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Show All</button>
        </form>
    </div>
</div>
<p class="mt-3">
    <a asp-controller="Admin" asp-action="SignUp" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>User</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>FullName</th>
            <th>UserName</th>
            <th>PassWord</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Fullname</td>
                <td>@user.UserName</td>
                <td>@user.PassWord</td>
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
                <td>@(user.RoleId == 1 ? "Admin" : user.RoleId == 2 ? "Customer" : "Guest")</td>
                <td>
                    <a href="/Admin/EditUser/@user.Id" class="btn btn-outline-success"><i class="bi bi-pencil-fill"></i> Edit</a>
                    <form class="d-inline" action="/Admin/DeleteUser/@user.Id" method="post">
                        <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash3"></i>Delete</button>
                    </form>
                </td>   
            </tr>
        }
    </tbody>
</table>