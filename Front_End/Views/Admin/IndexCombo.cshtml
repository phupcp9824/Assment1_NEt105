@model List<WebApi.Models.Combo>

<h2 class="text-center">List Combo</h2>

<div class="row mt-2">
    <div class="col-10">
        <form action="/Admin/FindNameCombo" method="get" class="form-inline my-2 my-lg-0 d-flex">
            <input class="form-control mr-sm-2" type="search" name="name" placeholder="Search by name..." aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="col-2">
        <form asp-action="IndexCombo" method="get" class="form-inline my-2 my-lg-0">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Show All</button>
        </form>
    </div>
</div>

<p class="mt-3">
    <main>
        <a class="btn btn-outline-primary" href="/Admin/CreateCombo"><i class="bi bi-plus-circle"></i>Combo</a>
    </main>
</p>
<div class="">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Image</th>
                <th>Size</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Combo in Model)
            {
                <tr>
                    <td>@Combo.Id</td>
                    <td>@Combo.Name</td>
                    <td>@Combo.Price</td>s
                    <td>@Combo.Quantity</td>
                    <td>
                        <img src="@Combo.Picture" alt="@Combo.Name" width="80" height="100" class="combo-image" />
                    </td>
                    <td>@Combo.size</td>
                    <td>@Combo.Description</td>
                    <td>
                        <a class="btn btn-outline-success" href="/Admin/EditCombo/@Combo.Id"><i class="bi bi-pencil-fill"></i>Edit</a>
                        <a class="btn btn-outline-info" href="/Admin/DetailCombo/@Combo.Id"><i class="bi bi-pencil-fill"></i>Detail</a>
                        <form class="d-inline" action="/Admin/DeleteCombo/@Combo.Id" method="post">
                            <button type="submit" class="btn btn-outline-danger"><i class="bi bi-trash3"></i>Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>