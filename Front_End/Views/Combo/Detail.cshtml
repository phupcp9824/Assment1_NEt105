@model WebApi.Models.Combo

<main>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Picture" alt="@Model.Name" class="img-fluid" />
            </div>
            <div class="col-md-6">
                <h1>@Model.Name</h1>
                <p>@Model.Description</p>
                <p><strong>Price:</strong> @Model.Price VND</p>
                <p><strong>Quantity Available:</strong> @Model.Quantity</p>
                <p><strong>Size:</strong> @Model.size</p>
                <a href="#" class="btn btn-success">Order Now</a>
            </div>
        </div>
    </div>
</main>
