@model WebApi.Models.FastFoodItem

<main class="mt-4">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.Picture" width="500px" height="700px" alt="@Model.Name" class="img-fluid" />
            </div>
            <div class="col-md-6">
                <h2 style="color:darkviolet">@Model.Name</h2>
                <p><strong>Price:</strong> @Model.Price VND</p>
                <p><strong>Category:</strong> @Model.Category?.Name</p>
                <p><strong>Description:</strong> @Model.Description</p>

                <!-- Add to Cart Form -->
                <form href="/OrderDetail/AddtoCart" method="post">
                    <input type="hidden" name="foodId" value="@Model.Id" />
                    <div class="form-group">
                        <label for="amount">Quantity:</label>
                        <input type="number" name="amount" required min="1" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-success">Order Now</button>
                </form>
            </div>
        </div>
    </div>
</main>
