@model List<WebApi.Models.FastFoodItem>
<main>
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <div class="card">
                                <img src="@item.Picture" alt="@item.Name" width="60px" height="250px" class="combo-image card-img-top" />
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text" style="color:coral">
                                        @item.Price VND
                                        <a href="/Customer/DetailFood/@item.Id" class="btn btn-primary float-right">
                                            <i class="bi bi-cart-plus"></i>
                                        </a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>No combos available at the moment.</p>
                }
            </div>
        </div>
    </div>
</main>
