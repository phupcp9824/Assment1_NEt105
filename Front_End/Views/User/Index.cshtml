<h1>Manager Account User</h1>
<a asp-controller="User" asp-action="SignUp" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i>User</a>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>FullName</th>
            <th>UserName</th>
            <th>PassWord</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Fullname</td>
                <td>@user.UserName</td>
                <td>@user.PassWord</td> 
                <td>@user.Email</td>
                <td>@user.Phone</td>
                <td>@user.Address</td>
                <td>@(user.RoleId == 1 ? "Admin" : user.RoleId == 2 ? "Customer" : "Guest")</td>
                <td>
                    <a href="/User/Edit/@user.Id" class="btn btn-outline-primary"><i class="bi bi-pencil-fill"></i> Edit</a>
                    <form method="post" onsubmit="return Xacnhan()" asp-controller="User" asp-action="DeleteConfirm" asp-route-id="@user.Id" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            <i class="bi bi-trash3"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>